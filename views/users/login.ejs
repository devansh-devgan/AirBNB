<% layout("/layouts/boilerplate.ejs") %>

<div class="row mt-3">
    <div class="col-4 mx-auto d-flex flex-column justify-content-center align-items-center">
        <br><br>
        <h1 class="heading">Login</h1>
        <br><br>
        <form action="/login" method="POST" class="needs-validation" novalidate>
            <input type="hidden" name="referer" value="<%= referer %>">
            <div class="text mb-3">
                <label for="username" class="form-label">Username</label>
                <input id="username" class="form-control" name="username" placeholder="Enter Username" type="text" minlength="2" maxlength="12" required oninput="this.value = this.value.toLowerCase()">
                <div class="invalid-feedback">Please Enter Username</div>
            </div>
            <br>
            <label for="password" class="form-label">Password</label>
            <div class="text input-group mb-3">
                <input id="password" class="form-control" name="password" placeholder="Enter Password" type="password" required>
                <div class="input-group-append">
                    <button class="btn btn-outline-secondary" type="button" id="togglePassword">
                      <i class="fas fa-eye"></i>
                    </button>
                </div>
                <div class="invalid-feedback">Please Enter Password</div>
            </div>
            <br>
            <button class="btn btn-dark btn-prop">Login</button>
        </form>
        <br><br><br>
    </div>
    <p class="l-s">Not a member yet ? &nbsp; <a href="/signup">SignUp</a> &nbsp; here</p>
</div>